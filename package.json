{
  "name": "interview-answer-assistant",
  "version": "2.7.1",
  "description": "AI-powered interview assistance tool with real-time transcription and answer generation",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon server/index.js",
    "client:dev": "cd client && npm run dev",
    "postinstall": "node -e \"const { existsSync } = require('fs'); const { execSync } = require('child_process'); if (process.env.SKIP_CLIENT_INSTALL) { console.log('SKIP_CLIENT_INSTALL set - skipping client deps'); process.exit(0); } if (existsSync('client/package.json')) { console.log('Installing client dependencies...'); execSync('npm install --legacy-peer-deps', { cwd: 'client', stdio: 'inherit' }); }\"",
    "build": "cd client && npm run build",
    "start": "node server/index.js",
    "db:migrate": "node server/database/migrate.js",
    "db:seed": "node server/database/seed.js",
    "test": "jest",
    "lint": "eslint ."
  },
  "keywords": [
    "interview",
    "ai",
    "assistant",
    "speech-to-text",
    "pwa"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "axios": "^1.6.5",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.18.2",
    "fluent-ffmpeg": "^2.1.3",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mammoth": "^1.11.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "openai": "^4.28.0",
    "passport": "^0.7.0",
    "passport-github2": "^0.1.12",
    "passport-google-oauth20": "^2.0.0",
    "pdf-parse": "^2.4.5",
    "pg": "^8.11.3",
    "update": "^0.7.4"
  },
  "devDependencies": {
    "nodemon": "^3.1.11"
  }
}
